# :mode=makefile:

CC = gcc

DEFINES = -D PC_WIN32
CCOPTS = -c -O
LDOPTS = -Wl,-S

BINNAME = inform6.exe

SOURCES = $(wildcard *.c)
OBJECTS = $(patsubst %.c,%.o,${SOURCES})

.PHONY: all clean

all:	$(BINNAME)

# Rules
%.o: %.c
	$(CC) $(DEFINES) $(CCOPTS) -o $@ -c $<

$(BINNAME): $(OBJECTS)
	$(CC) $(LDOPTS) -o $@ $^

clean:
	del /Q $(BINNAME)
	del /Q *.o
